{
  "name": "@blockful/contracts",
  "description": "Foundry-based template for developing Solidity smart contracts",
  "version": "1.0.0",
  "author": "Paul Razvan Berg (https://github.com/PaulRBerg)",
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1"
  },
  "devDependencies": {
    "forge-std": "github:foundry-rs/forge-std#v1.8.1",
    "prettier": "^3.0.0",
    "solhint": "^3.6.2"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "forge",
    "foundry",
    "smart-contracts",
    "solidity",
    "template"
  ],
  "private": true,
  "scripts": {
    "clean": "rm -rf cache out",
    "build": "forge build",
    "lint": "npm run lint:sol",
    "lint:sol": "forge fmt --check && npx solhint {script,src,test}/**/*.sol",
    "test": "forge test",
    "test:coverage": "forge coverage",
    "test:coverage:report": "forge coverage --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage"
  },
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "license": "ISC"
}